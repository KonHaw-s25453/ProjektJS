{
  "name": "vcv-patch-archive",
  "version": "0.1.0",
  "description": "Minimal scaffold for VCV Rack patch upload/indexing service",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node scripts/create_db.js",
    "seed": "node scripts/seed.js",
    "seed:sql": "mysql -u $DB_USER -p$DB_PASS $DB_NAME < seeds.sql",
    "seed:node": "node scripts/seed.js",
    "test": "jest --runInBand",
    "test:record": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\run_tests.ps1",
    "test:integration": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"$env:REAL_DB='1'; & '.\\scripts\\run_tests.ps1'\"",
    "test:integration:ci": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\run_tests.ps1 -OutFile .\\test-results-real.txt -JsonFile .\\test-results-real.json -JUnitFile .\\test-results-real.xml"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.3.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
