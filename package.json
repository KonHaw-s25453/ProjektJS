{
  "name": "vcv-patch-archive",
  "version": "0.1.0",
  "description": "Minimal scaffold for VCV Rack patch upload/indexing service",
  "main": "server.js",
  "scripts": {
    "start": "node server-next.js",
    "dev": "nodemon server-next.js",
    "test:front:out": "powershell -Command \"npm --prefix frontend test -- --runInBand --detectOpenHandles > front-test-result.txt 2>&1\"",
    "migrate": "node scripts/create_db.js",
    "seed": "node scripts/seed.js",
    "seed:sql": "mysql -u $DB_USER -p$DB_PASS $DB_NAME < seeds.sql",
    "seed:node": "node scripts/seed.js",
    "test": "jest --runInBand",
    "test:out": "powershell -Command \"npx jest --runInBand --detectOpenHandles > test-results.txt 2>&1\"",
    "test:record": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\run_tests.ps1",
    "test:integration": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"$env:REAL_DB='1'; & '.\\scripts\\run_tests.ps1'\"",
    "test:integration:ci": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\run_tests.ps1 -OutFile .\\test-results-real.txt -JsonFile .\\test-results-real.json -JUnitFile .\\test-results-real.xml"
  },
  "dependencies": {
    "@mongodb-js/zstd": "^7.0.0",
    "bcryptjs": "^3.0.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "next": "^14.0.0",
    "nodemon": "^3.1.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "forceExit": true,
    "roots": [
      "<rootDir>/__tests__"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
